{% extends "AcmeDemoBundle::layout1.html.twig" %}

{% block title "Symfony - Contact form" %}

{% block content %}
    <form action="{{ path('_demo_contact') }}" method="POST" id="contact_form" angular-submit>
        {{ form_errors(form) }}

        {{ form_row(form.email) }}
        {{ form_row(form.message) }}

        {{ form_rest(form) }}
        <input type="submit" value="Send" class="symfony-button-grey" />
    </form>
{% endblock %}
